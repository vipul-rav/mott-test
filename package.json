{
  "name": "base-app",
  "version": "0.0.1",
  "private": true,
  "author": "Vipul Raotole",
  "type": "module",
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:commit"
    }
  },
  "dependencies": {
    "@emotion/react": "11.9.0",
    "@emotion/styled": "11.8.1",
    "@mui/material": "5.6.4",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-app-polyfill": "2.0.0",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1",
    "whatwg-fetch": "3.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "^9.4.0",
    "eslint": "7.18.0",
    "eslint-detailed-reporter": "0.8.0",
    "eslint-formatter-summary": "1.0.5",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-react": "7.22.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll",
    "eject": "react-scripts eject",
    "lint": "eslint --ext=js --ext=jsx src/",
    "lint:fix": "eslint --ext=js --ext=jsx --fix src/",
    "format": "prettier --write \"./src/**/*.(js|jsx|json|yml|yaml|css|scss)\"",
    "test:commit": "react-scripts test --watchAll=false",
    "test:coverage": "npm run test -- --coverage --watchAll=false "
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "eslintIgnore": [
    "*.test.js",
    "*.spec.js"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
